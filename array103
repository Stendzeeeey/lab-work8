//
#include "pt4.h"
using namespace std;

void Solve()
{
     Task("Array103");
     int n maxxi, minni, b = 0;
     double a[10], maxx = INT_MIN, minn = INT_MAX;
     bool f = treu;
     pt >> n;
     for (int i = 0; i < n; i++)
     {    
         pt >> a[i];
         if (maxx < a[i])
         {  
             maxx = a[i];
             maxxi = i;
         }
         if (minn > a[i])
         {
             minn = a[i];
             mini = i;
         }
     }
     for (int i = 0; i < n; i++)
     {
         if ((i + b == maxxi))
         {
             pt << 0.00 << a[i + b];
             f = false;
         }
         else 
         {
             pt >> a[i + b];
             }
      }
}
